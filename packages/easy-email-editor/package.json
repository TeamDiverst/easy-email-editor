{
  "name": "@TeamDiverst/easy-email-editor",
  "license": "MIT",
  "description": "Email editor",
  "version": "5.2.0",
  "author": "m-Ryan",
  "repository": {
    "type": "git",
    "url": "git@github.com:TeamDiverst/easy-email-editor.git"
  },
  "keywords": [
    "email editor core"
  ],
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "dev": "vite",
    "typings": "tsc --declaration --emitDeclarationOnly --project tsconfig.lib.json && tsc-alias -p tsconfig.alias.json",
    "build": "rimraf lib && npm run typings && vite build --config vite.config.ts",
    "format": "eslint --fix  --ext .tsx,.ts,.tsx src/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && yarn lint-staged"
    }
  },
  "lint-staged": {
    "src/*.{js,jsx,ts,tsx}, example/*.{js,jsx,ts,tsx}": [
      "yarn lint"
    ]
  },
  "dependencies": {
    "@arco-themes/react-easy-email-theme": "^0.0.3",
    "final-form": "^5.0.0",
    "final-form-arrays": "^4.0.0",
    "final-form-set-field-touched": "^1.0.1",
    "is-hotkey": "^0.2.0",
    "lodash": "^4.17.21",
    "react-final-form-arrays": "^4.0.0",
    "react-use": "^17.3.1"
  },
  "devDependencies": {
    "@types/final-form-set-field-touched": "^1.0.0",
    "@types/is-hotkey": "^0.1.7",
    "@types/lodash": "^4.14.178",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^4.28.3",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "mjml-browser": "^4.10.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-final-form": "^7.0.0",
    "rimraf": "^3.0.2",
    "sass": "^1.92.1",
    "tsc-alias": "^1.4.1",
    "typescript": "^4.6.3",
    "vite": "^7.1.6"
  },
  "peerDependencies": {
    "@teamdiverst/easy-email-core": "^5.2.0",
    "mjml-browser": "^4.10.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-final-form": "^7.0.0"
  },
  "gitHead": "2a08e8af15766344de708d891c1c8ea31bb77646"
}
